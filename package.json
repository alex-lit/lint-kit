{
  "name": "@alexlit/lint-kit",
  "version": "0.3.0",
  "private": false,
  "description": "Lint Kit",
  "keywords": [
    "commitlint",
    "config",
    "eslint",
    "kit",
    "lint",
    "markdownlint",
    "prettier",
    "stylelint"
  ],
  "homepage": "https://github.com/alex-lit/lint-kit#readme",
  "bugs": {
    "url": "https://github.com/alex-lit/lint-kit/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alex-lit/lint-kit.git"
  },
  "license": "MIT",
  "author": "Alexey Litovchenko",
  "maintainers": [
    {
      "name": "Alexey Litovchenko",
      "email": "alex.lit@outlook.com",
      "url": "https://alexlit.gitlab.io"
    }
  ],
  "main": "README.md",
  "files": [
    ".commitlintrc.js",
    ".eslintrc.js",
    ".markdownlint.json",
    ".prettierrc.js",
    ".stylelintrc.js"
  ],
  "scripts": {
    "lint": "./scripts/lint.sh",
    "lint:eslint": "./scripts/lint.eslint.sh",
    "lint:markdownlint": "./scripts/lint.markdownlint.sh",
    "lint:stylelint": "./scripts/lint.stylelint.sh",
    "publish": "./scripts/publish.sh",
    "semver": "./scripts/semver.sh",
    "up": "./scripts/up.sh",
    "version": "./scripts/version.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix",
    "*.{vue,pcss,scss,sass,css}": "stylelint --fix",
    "*.{md}": "markdownlint --fix"
  },
  "dependencies": {
    "@alexlit/config-commitlint": "^0.0.3",
    "@alexlit/config-eslint": "^0.3.0",
    "@alexlit/config-markdownlint": "0.1.0",
    "@alexlit/config-prettier": "^0.0.6",
    "@alexlit/config-stylelint": "^0.0.9",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3"
  }
}
